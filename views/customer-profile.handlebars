<div class="container centered-panel">
  <div class="row">
    <div class="col s4">
      <img src="/assets/customers/placeholder.png" alt="Customer image">
    </div>
    <div class="col s8">
      <h2>{{first_name}} {{last_name}}</h2>
      <ul>
        <li>
          <div style="height: 36px; width: {{ star_width }}; overflow-x: hidden">
            <img src="/assets/stars.png" alt="stars" style="height: 100%;">
          </div>
        </li>
        <li>{{#if city}}{{city}} {{/if}}{{#if state}}{{state}}{{/if}}</li>
        <li>{{ createdAt }}</li>
        <li>{{ updatedAt }}</li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h2>Reviews</h2>
    </div>
  </div>
  {{#each reviews}}
    <div class="row">
      <div class="col s3">
        <p>Rating: {{ rating }}</p>
        <p>By: {{ business }}</p>
      </div>
      <div class="col s9"><p>{{ text }}</p></div>
    </div>
  {{/each}}
</div>