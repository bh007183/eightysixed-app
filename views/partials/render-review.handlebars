<div class="row">
    {{#each reviews}}
    <div class="col s12 m4 l3 xl3">
        <div class="card">
            <div class="card-image">
                <img src="{{pic}}">
                <span class="card-title">{{title}} {{last_name}}</span>
            </div>
            <div class="card-content">
                <p>{{#if body}}{{body}} {{/if}}{{#if state}}{{state}}{{/if}}</p>
                <div style="height: 36px; width: {{ star_width }}; overflow-x: hidden">
                    <img src="/assets/stars.png" alt="stars" style="height: 100%;">
                </div>
            </div>
            <div class="card-action">
                <a href="/customer-profile/{{ id }}">View Profile</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>