          <option class="st" value="Oklahoma" {{#if businessData.Oklahoma}}selected{{/if}}>Oklahoma</option>
          <option class="st" value="Oregon" {{#if businessData.Oregon}}selected{{/if}}>Oregon</option>
          <option class="st" value="Pennsylvania" {{#if businessData.Pennsylvania}}selected{{/if}}>Pennsylvania</option>
          <option class="st" value="Rhode Island" {{#if businessData.RhodeIsland}}selected{{/if}}>Rhode Island</option>
          <option class="st" value="South Carolina" {{#if businessData.SouthCarolina}}selected{{/if}}>South Carolina</option>
          <option class="st" value="South Dakota" {{#if businessData.SouthDakota}}selected{{/if}}>South Dakota</option>
          <option class="st" value="Tennessee" {{#if businessData.Tennessee}}selected{{/if}}>Tennessee</option>
