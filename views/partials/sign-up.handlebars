
<div class="card sign_up_sheet" style="margin: 50px">
  <form class="row sign-up-form" style="max-width: 70%;">
      <div class="row">
          {{#if businessData}}
            <style>
              .sign-up-form input::placeholder {
                color: black;
              }
            </style>
          {{/if}}
          <div class="input-field col s8" style="margin: 2px 0px 2px 0px">
              <input placeholder="Name" id="company_name" type="text" class="company_name" value="{{#if businessData}}{{businessData.name}}{{/if}}">
          </div>
            <a class='dropdown-trigger btn category' href='#' data-target='dropdown2' style="margin: 2px 0px 2px 0px">Category</a>
          <!-- Dropdown Structure -->
            <ul id='dropdown2' class='dropdown-content'>
            <li><a class="ctgy restaurant" value="1"href="#!">Restaurant</a></li>
            <li class="divider" tabindex="-1"></li>
            <li><a class="ctgy hotel" value="2" href="#!">Hotel</a></li>
            <li class="divider" tabindex="-1"></li>
            <li><a class="ctgy cafe" value="3" href="#!">Cafe</a></li>
            <li class="divider" tabindex="-1"></li>
            <li><a class="ctgy bar" value="4" href="#!">Bar</a></li>
            </ul>
      </div>
           
      <div class="row"> 
        <div class="input-field col s12" style="margin: 2px 0px 2px 0px">
          <input placeholder="Address" id="textarea2" class="materialize-textarea address" data-length="120" style="padding: 0px;" value="{{#if businessData}}{{businessData.address}}{{/if}}" >
        </div>
      </div>
      <div class="row"> 
        <div class="input-field col s6" style="margin: 2px 0px 2px 0px">
          <input placeholder="Address 2 (optional)" id="textarea3" class="materialize-textarea addresstwo" data-length="120" style="padding: 0px;" value="{{#if businessData}}{{businessData.addresstwo}}{{/if}}">
        </div>
        <div class="input-field col s6" style="margin: 2px 0px 2px 0px">
          <input placeholder="City" id="textarea6" class="materialize-textarea city" data-length="120" style="padding: 0px;" value="{{#if businessData}}{{businessData.city}}{{/if}}">
        </div>
      </div>
      <div class="row"> 
        <div class="input-field col s6" style="margin: 2px 0px 2px 0px">
          <select class="select">
          {{#unless businessData}}
            <option class="st" value="State" disabled selected>State</option>
          {{/unless}}
