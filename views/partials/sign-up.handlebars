          <option class="st" value="Delware" {{#if businessData.Delaware}}selected{{/if}}>Delaware</option>
          <option class="st" value="District of Columbia" {{#if businessData.DistrictofColumbia}}selected{{/if}}>District Of Columbia</option>
          <option class="st" value="Florida" {{#if businessData.Florida}}selected{{/if}}>Florida</option>
          <option class="st" value="Georgia" {{#if businessData.Georgia}}selected{{/if}}>Georgia</option>
          <option class="st" value="Hawaii" {{#if businessData.Hawaii}}selected{{/if}}>Hawaii</option>
          <option class="st" value="Idaho" {{#if businessData.Idaho}}selected{{/if}}>Idaho</option>
          <option class="st" value="Illinois" {{#if businessData.Illinois}}selected{{/if}}>Illinois</option>
          <option class="st" value="Indiana" {{#if businessData.Indiana}}selected{{/if}}>Indiana</option>
          <option class="st" value="Iowa" {{#if businessData.Iowa}}selected{{/if}}>Iowa</option>
          <option class="st" value="Kansas" {{#if businessData.Kansas}}selected{{/if}}>Kansas</option>
          <option class="st" value="Kentucky" {{#if businessData.Kentucky}}selected{{/if}}>Kentucky</option>
          <option class="st" value="Louisiana" {{#if businessData.Louisiana}}selected{{/if}}>Louisiana</option>
          <option class="st" value="Maine" {{#if businessData.Maine}}selected{{/if}}>Maine</option>
          <option class="st" value="Maryland" {{#if businessData.Maryland}}selected{{/if}}>Maryland</option>
          <option class="st" value="Massachusetts" {{#if businessData.Massachusetts}}selected{{/if}}>Massachusetts</option>
          <option class="st" value="Michigan" {{#if businessData.Michigan}}selected{{/if}}>Michigan</option>
          <option class="st" value="Minnesota" {{#if businessData.Minnesota}}selected{{/if}}>Minnesota</option>
          <option class="st" value="Mississippi" {{#if businessData.Mississippi}}selected{{/if}}>Mississippi</option>
          <option class="st" value="Missouri" {{#if businessData.Missouri}}selected{{/if}}>Missouri</option>
          <option class="st" value="Montana" {{#if businessData.Montana}}selected{{/if}}>Montana</option>
          <option class="st" value="Nebraska" {{#if businessData.Nebraska}}selected{{/if}}>Nebraska</option>
          <option class="st" value="Nevada" {{#if businessData.Nevada}}selected{{/if}}>Nevada</option>
          <option class="st" value="New Hampshire" {{#if businessData.NewHampshire}}selected{{/if}}>New Hampshire</option>
          <option class="st" value="New Jersey" {{#if businessData.NewJersey}}selected{{/if}}>New Jersey</option>
          <option class="st" value="New Mexico" {{#if businessData.NewMexico}}selected{{/if}}>New Mexico</option>
          <option class="st" value="New York" {{#if businessData.NewYork}}selected{{/if}}>New York</option>
          <option class="st" value="North Carolina" {{#if businessData.NorthCarolina}}selected{{/if}}>North Carolina</option>
          <option class="st" value="North Dakota" {{#if businessData.NorthDakota}}selected{{/if}}>North Dakota</option>
